<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence name="Sequence1">
            <Action ID="go1"/>
            <Sequence name="Sequence2">
                <Action ID="stay1"/>
                <Action ID="stay2"/>
                <Sequence name="Sequence3">
                    <Action ID="go1"/>
                    <Action ID="go2"/>
                    <Condition ID="isFull"/>
                    <Action ID="go3"/>
                </Sequence>
            </Sequence>
            <Action ID="go2"/>
            <Action ID="go3"/>
            <Sequence name="Sequence4">
                <Action ID="go1"/>
                <Action ID="go2"/>
                <Fallback>
                    <Inverter>
                        <Action ID="go4"/>
                    </Inverter>
                    <ForceSuccess>
                        <Action ID="go2"/>
                    </ForceSuccess>
                    <Action ID="cInName"/>
                </Fallback>
            </Sequence>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="cInName"/>
        <Action ID="dumpRun"/>
        <Action ID="go1"/>
        <Action ID="go2"/>
        <Action ID="go3"/>
        <Action ID="go4"/>
        <Action ID="goClosestR"/>
        <Condition ID="isFull"/>
        <Action ID="mineResources"/>
        <Action ID="moveBaseToGoal">
            <input_port name="key_name">goal</input_port>
        </Action>
        <Action ID="stay1"/>
        <Action ID="stay2"/>
        <Action ID="waitFrames">
            <output_port name="barout"/>
            <input_port name="baz"/>
            <input_port name="fooin"/>
            <input_port default="15" name="frames">frames</input_port>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

